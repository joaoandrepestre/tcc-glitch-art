      "DOM"
    ],
    "target": "ES6",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}